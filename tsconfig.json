{
    "compilerOptions": {
        "module": "NodeNext",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "exactOptionalPropertyTypes": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "./dist",
        "incremental": true,
        "skipLibCheck": true,
        "alwaysStrict": true,
        "strict": true,
        "useUnknownInCatchVariables": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "esModuleInterop": false,
        "baseUrl": ".",
        "paths": {
            "@lib/*": ["lib/*"],
            "@bin/*": ["lib/bin/*"],
            "@cli/*": ["lib/cli/*"],
            "@core/*": ["lib/core/*"],
            "@decorators/*": ["lib/decorators/*"],
            "@factory/*": ["lib/factory/*"],
            "@logger/*": ["lib/logger/*"],
            "@patches/*": ["lib/patches/*"],
            "@tools/*": ["lib/tools/*"],
            "@interfaces/*": ["lib/interfaces/*"],
            "@transformers/*": ["lib/transformers/*"],
            "@testing/*": ["lib/testing/*"],

            "@specs/*": ["specs/*"]
        }
    },
    "exclude": [
        "dist",
        "dist:specs",
        "dist:check",
        "node_modules"
    ],
    "include": [
        "lib/**/*",
        "lib/**/*.json",
        "lib/**/*.template",
        "specs/**/*"
    ]
}
